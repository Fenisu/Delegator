<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="wrap_content" 
    android:paddingRight="?android:attr/scrollbarSize" 
    android:gravity="center_vertical" 
    android:layout_width="fill_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:minHeight="?android:attr/listPreferredItemHeight">
    <RelativeLayout
        android:layout_marginTop="6dip" 
        android:layout_marginLeft="10dip" 
        android:layout_height="wrap_content" 
        android:layout_marginBottom="6dip" 
        android:layout_width="fill_parent">

        <TextView android:id="@+id/list_item_task_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:ellipsize="marquee"
            android:lines = "1"
            android:fadingEdge="horizontal" />
        <Button android:id="@+id/list_item_task_button"
    		android:layout_width="wrap_content"
    		android:layout_height="fill_parent"
    		android:layout_centerVertical="true"
    		android:layout_alignParentRight="true"
    	
    		android:text="@string/list_item_task_button_title" 
    		android:onClick="timerClickHandler"/> 
 		<TextView android:id="@+id/list_item_task_descr"
			android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_task_title"
            android:layout_alignRight="@id/list_item_task_button"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:ellipsize="marquee"
            android:lines = "1"
            android:fadingEdge="horizontal"/>
 		<TextView android:id="@+id/list_item_task_progress"
			android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_task_descr"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:ellipsize="marquee"
            android:lines = "1"
            android:fadingEdge="horizontal"/>
    </RelativeLayout>

</FrameLayout>